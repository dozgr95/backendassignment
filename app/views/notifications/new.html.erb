<h1><%= @formtitle %></h1>

<h3>Add a notification</h3>     <!--notifications_path directs to create-->
<%= form_for :notification, url: notifications_path  do |f| %>
    <% if @notification.errors.any? %>
        <% @notification.errors.full_messages.each do |msg| %>
            <div><i><%= msg %></i> </div>
        <% end %>
    <% end %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description, size: "60x12" %>
    </p>
    <p>
        <%= f.label :company_ID %><br>
        <%= f.text_field :company %><br>
        e.g. 1 for Glencore, 2 for Syngenta, 3 for LafargeHolcim...
    </p> 
    <p>
        <%= f.hidden_field :active, value: true %>
        <%= f.submit "Create" %>
    </p>
<% end %>

